{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "jsx": "react-jsx", // For React 17+
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true, // Avoid type-checking issues for external libraries
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
